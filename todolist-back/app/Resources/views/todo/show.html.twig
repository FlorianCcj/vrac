{% extends 'base.html.twig' %}

{% block body %}
    <h1>Todo</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ todo.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ todo.name }}</td>
            </tr>
            <tr>
                <th>Completed</th>
                <td>{% if todo.completed %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Text</th>
                <td>{{ todo.text }}</td>
            </tr>
            <tr>
                <th>Archive</th>
                <td>{% if todo.archive %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('todos_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('todos_edit', { 'id': todo.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
