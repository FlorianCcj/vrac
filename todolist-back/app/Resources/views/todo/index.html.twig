{% extends 'base.html.twig' %}

{% block body %}
    <h1>Todos list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Completed</th>
                <th>Text</th>
                <th>Archive</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for todo in todos %}
            <tr>
                <td><a href="{{ path('todos_show', { 'id': todo.id }) }}">{{ todo.id }}</a></td>
                <td>{{ todo.name }}</td>
                <td>{% if todo.completed %}Yes{% else %}No{% endif %}</td>
                <td>{{ todo.text }}</td>
                <td>{% if todo.archive %}Yes{% else %}No{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('todos_show', { 'id': todo.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('todos_edit', { 'id': todo.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('todos_new') }}">Create a new todo</a>
        </li>
    </ul>
{% endblock %}
